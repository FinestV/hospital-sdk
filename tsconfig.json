{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": [
            "dom", "es2015", "scripthost", "es2015.promise", "es2015.generator", "es2015.iterable"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}