{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        //"emitDecoratorMetadata": true,
        //"experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "files": [
        "globals.d.ts"
    ]
}